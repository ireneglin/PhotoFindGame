<% include partials/navbar%>
<section class="container">
    <div class="jumbotron">
        <h1>Create Game</h1>


        <form action="/api/games/create" method="post">
            
<section class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Game Details</h3>
  </div>
  <div class="panel-body">
        <aside class="row">
            <div class="form-group col-md-6">
                <label for="gameName">Name</label>
                <input type="text" class="form-control" id="gameName" name="gameName">
            </div>
                <div class="form-group col-md-6">
                    <label for="gameDifficulty">Difficulty</label>
                    <select name="gameDifficulty" class="form-control" id="gameDifficulty">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </aside>
            <aside class="row">
                <div class="form-group col-md-6">
                    <label for="gameInfo">Info</label>
                    <textarea class="form-control" name="gameInfo" id="gameInfo" rows="6"></textarea>
                </div>
                <div class="form-group col-md-6">
                    <label for="gameCountry">Country</label>
                    <input id="gameCountry" name="gameCountry" class="form-control">
                    <label for="gameCity">City</label>
                    <input id="gameCity" name="gameCity" class="form-control">
                </div>
                <input type="hidden" name="gui" value="true">
        </aside>
