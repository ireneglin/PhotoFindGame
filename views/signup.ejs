<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PhotoFind Signup</title>
		<link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css">
		<link type="text/css" rel="stylesheet" href="/css/readable.css">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

</head>
<body>
	<% include partials/preLoginNavbar%>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">
<section class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><span class="fa fa-sign-in"></span> Signup</h3>
  </div>
  <div class="panel-body">


        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control" name="firstname">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" class="form-control" name="lastname">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Alias</label>
                <input type="text" class="form-control" name="username">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <div class="radio">
                <label>
                    <input type="hidden" name="isAdmin" id="optionsRadios1" value="false" checked="">
             <!--       Player  -->
                </label>
            </div>
      <!--      <div class="radio">
                <label>
                    <input type="radio" name="isAdmin" id="optionsRadios2" value="true">
                    Admin <br>(This option is only on the signup page for localhost/fresh DB installs by TAs/Prof for marking)
                </label>
            </div>   -->
            <div class="form-group">
                <label>Country</label>
                <input type="text" class="form-control" name="country">
            </div>
            <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" name="city">
            </div>
            <div class="form-group">
                <input type="checkbox" name="age" value="age" checked>I am 18 years or older<br>
            </div>      
            <button type="submit" class="btn btn-success btn-lg">Signup</button>
        </form>

        <hr>

        <p>Already have an account? <a href="/login">Login</a></p>
        <p>Or go <a href="/">home</a>.</p>

    </div></div></section>

</div>
</body>
</html>